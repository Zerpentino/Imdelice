<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Imdeliceapp"
             x:Class="Imdeliceapp.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Sombra clarita para modo claro -->
    <Shadow x:Key="LightCardShadow"
            Brush="#00000033"
            Offset="0,16"
            Radius="20"
            Opacity="0.5"/>

    <!-- Sombra más intensa para modo oscuro -->
    <Shadow x:Key="DarkCardShadow"
            Brush="#000000AA"
            Offset="0,8"
            Radius="24"
            Opacity="0.60"/>

<Style x:Key="InputBorderStyleaa" TargetType="Border">
  <Setter Property="Stroke" Value="{AppThemeBinding Light=#DADADA, Dark=#444444}" />
  <Setter Property="StrokeThickness" Value="1" />
  <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=White, Dark=#262626}" />
  <Setter Property="HeightRequest" Value="56" />
  <Setter Property="Padding" Value="18,0" />
  <Setter Property="StrokeShape">
    <Setter.Value>
      <RoundRectangle CornerRadius="12" />
    </Setter.Value>
  </Setter>
  <Setter Property="Shadow">
    <Setter.Value>
      <AppThemeBinding Light="{StaticResource LightCardShadow}" Dark="{StaticResource DarkCardShadow}" />
    </Setter.Value>
  </Setter>
</Style>

<Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="HeightRequest" Value="46"/>
            <Setter Property="Padding"       Value="18,0"/>
            <Setter Property="CornerRadius"  Value="20"/>
            <Setter Property="BackgroundColor"
                    Value="{AppThemeBinding Light=#F1E9F1, Dark=#2B1D29}"/>
            <Setter Property="TextColor"
                    Value="{AppThemeBinding Light=#894164, Dark=#D5B2C2}"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="FontSize">
        <Setter.Value>
            <OnIdiom x:TypeArguments="x:Double"
                     Phone="12"
                     Tablet="14"
                     Desktop="15"/>
        </Setter.Value>
    </Setter>
        </Style>
 

    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="CornerRadius"  Value="25"/>
        <Setter Property="HeightRequest" Value="50"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="BackgroundColor" Value="#894164"/>
        <Setter Property="TextColor"      Value="White"/>
        <Setter Property="WidthRequest" Value="190"/>

        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="#00000040"
                        Offset="0,4"
                        Radius="8"
                        Opacity="0.25"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Sombra muy difusa -->
<Shadow x:Key="CardShadowLight"
        Brush="#00000033"  Offset="0,8" Radius="24" Opacity="0.40"/>
<Shadow x:Key="CardShadowDark"
        Brush="#000000AA"  Offset="0,8" Radius="24" Opacity="0.70"/>

<!-- Estilo para los campos -->
 <Style x:Key="InputCardStyle" TargetType="Border">
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="Stroke"
                Value="{AppThemeBinding Light=#DADADA, Dark=#444444}"/>
        <Setter Property="BackgroundColor"
                Value="{AppThemeBinding Light=White, Dark=#262626}"/>
        <Setter Property="Padding" Value="18,0"/>
        <Setter Property="HeightRequest" Value="56"/>
      </Style>

 <Color x:Key="BrandPrimary">#ffcc29</Color>          <!-- color de tu empresa -->
  <Color x:Key="BrandOnPrimary">White</Color>          <!-- color de texto/iconos encima -->

<Style x:Key="EntrySinLinea" TargetType="Entry" ApplyToDerivedTypes="True">
    <!-- ✨ la clave -->
    <Setter Property="Visual"                Value="Default"/>

    <Setter Property="BackgroundColor"       Value="Transparent"/>
    <Setter Property="TextColor"             Value="{AppThemeBinding Light=Black , Dark=White}"/>
    <Setter Property="PlaceholderColor"      Value="{AppThemeBinding Light=LightGray  , Dark=LightGray}"/>
    <Setter Property="FontSize"              Value="17"/>

    <!-- que tenga altura y se centre -->
    <Setter Property="VerticalOptions"       Value="Fill"/>
    <Setter Property="VerticalTextAlignment" Value="Center"/>
    <Setter Property="MinimumHeightRequest"  Value="44"/>
</Style>



<Style x:Key="CodeBoxStyle" TargetType="Entry">
    <Setter Property="WidthRequest"   Value="48"/>
    <Setter Property="HeightRequest"  Value="56"/>
    <Setter Property="FontSize"       Value="22"/>
    <Setter Property="HorizontalTextAlignment" Value="Center"/>
    <Setter Property="Keyboard"       Value="Numeric"/>
    <Setter Property="MaxLength"      Value="1"/>
    <Setter Property="BackgroundColor"
            Value="{AppThemeBinding Light=White, Dark=Black}"/>
    <Setter Property="TextColor"
            Value="{AppThemeBinding Light=Black, Dark=White}"/>

</Style>


<Style x:Key="Chevron14" TargetType="ImageButton">
        <Setter Property="WidthRequest"    Value="10" />
        <Setter Property="HeightRequest"   Value="10" />
        <Setter Property="Scale"           Value="0.6"/>
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="HorizontalOptions" Value="End" />
        <Setter Property="VerticalOptions"   Value="Center" />
        <Setter Property="Padding"           Value="0" />
    </Style>
<Style x:Key="PickFileButtonStyle" TargetType="Button">
    <Setter Property="CornerRadius"     Value="14"/>
    <Setter Property="HeightRequest"    Value="54"/>
    <Setter Property="FontAttributes"   Value="Bold"/>
    <Setter Property="TextColor"        Value="White"/>
    <Setter Property="BackgroundColor"  Value="#894164"/>
    <Setter Property="FontSize">
        <Setter.Value>
            <OnIdiom Phone="14" Tablet="16"/>
        </Setter.Value>
    </Setter>
</Style>

<Style x:Key="PwdBorderStyle" TargetType="Border">
    <Setter Property="Stroke"           Value="{AppThemeBinding Light=#DADADA, Dark=#444444}"/>
    <Setter Property="StrokeThickness"  Value="1"/>
<Setter Property="StrokeShape">
        <Setter.Value>
            <RoundRectangle CornerRadius="12" />
        </Setter.Value>
    </Setter>
    <Setter Property="BackgroundColor"  Value="{AppThemeBinding Light=White, Dark=#262626}"/>
    <Setter Property="HeightRequest"    Value="56"/>
    <Setter Property="Padding"          Value="16,0"/>
    <Setter Property="Shadow">
        <Setter.Value>
            <AppThemeBinding Light="{StaticResource CardShadowLight}"
                             Dark="{StaticResource CardShadowDark}"/>
        </Setter.Value>
    </Setter>
</Style>

<Style x:Key="InputBorderStyle" TargetType="Border">
    <!-- contorno -->
    <Setter Property="Stroke"          Value="{AppThemeBinding Light=#D0D0D0, Dark=#555}" />
    <Setter Property="StrokeThickness" Value="1" />

    <!-- esquinas redondeadas -->
    <Setter Property="StrokeShape">
        <Setter.Value>
            <RoundRectangle CornerRadius="8"/>
        </Setter.Value>
    </Setter>

    <!-- padding y fondo -->
    <Setter Property="Padding"         Value="12,8"/>
    <Setter Property="BackgroundColor" Value="Transparent"/>
</Style>


<Style x:Key="PrimaryPillSmButtonStyle" TargetType="Button">
    <Setter Property="FontSize" Value="13"/>
    <Setter Property="CornerRadius" Value="18"/>
    <Setter Property="Padding" Value="14,8"/>
    <Setter Property="BackgroundColor" Value="{StaticResource BrandPrimary}"/>
    <Setter Property="TextColor" Value="{StaticResource BrandOnPrimary}"/>
  </Style>

  <!-- Botón pill pequeño: secundario -->
  <Style x:Key="SecondaryPillSmButtonStyle" TargetType="Button">
    <Setter Property="FontSize" Value="13"/>
    <Setter Property="CornerRadius" Value="18"/>
    <Setter Property="Padding" Value="14,8"/>
    <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#EEE, Dark=#333}"/>
    <Setter Property="TextColor" Value="{AppThemeBinding Light=#222, Dark=#EEE}"/>
  </Style>

  <!-- Botón pill pequeño: peligro -->
  <Style x:Key="DangerPillSmButtonStyle" TargetType="Button">
    <Setter Property="FontSize" Value="13"/>
    <Setter Property="CornerRadius" Value="18"/>
    <Setter Property="Padding" Value="14,8"/>
    <Setter Property="BackgroundColor" Value="#E53935"/>
    <Setter Property="TextColor" Value="White"/>
  </Style>

  
  <x:String x:Key="urlbase">http://192.168.49.187:3000</x:String>
      <x:String x:Key="urlloginemail">/api/auth/email</x:String>
      <x:String x:Key="urlloginpin">/api/auth/pin</x:String>



            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
