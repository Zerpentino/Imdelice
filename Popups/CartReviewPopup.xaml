<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="Imdeliceapp.Popups.CartReviewPopup"
               CanBeDismissedByTappingOutsideOfPopup="True">
  <Border Stroke="{AppThemeBinding Light=#DDDDDD, Dark=#333333}"
          StrokeShape="{RoundRectangle CornerRadius=24}"
          BackgroundColor="{AppThemeBinding Light=White, Dark=#181818}"
          Padding="0">
    <VerticalStackLayout Spacing="16" Padding="20" WidthRequest="380" HeightRequest="520">
      <Grid ColumnDefinitions="*,Auto">
        <Label Text="Resumen de la orden"
               FontAttributes="Bold"
               FontSize="20"/>
        <Button Grid.Column="1"
                Text="✕"
                FontSize="16"
                WidthRequest="32"
                HeightRequest="32"
                Padding="0"
                BackgroundColor="Transparent"
                Clicked="CloseButton_Clicked"/>
      </Grid>

      <CollectionView x:Name="ItemsView"
                      ItemsSource="{Binding Items}"
                      SelectionMode="None"
                      HeightRequest="320">
        <CollectionView.EmptyView>
          <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="6">
            <Label Text="Tu carrito está vacío" FontAttributes="Bold"/>
            <Label Text="Agrega productos para iniciar la orden." FontSize="12" Opacity="0.8"/>
          </VerticalStackLayout>
        </CollectionView.EmptyView>
        <CollectionView.ItemTemplate>
          <DataTemplate>
            <Border Stroke="{AppThemeBinding Light=#EFE0E7, Dark=#2C1D25}"
                    StrokeShape="{RoundRectangle CornerRadius=16}"
                    BackgroundColor="{AppThemeBinding Light=#FBF6F8, Dark=#24151D}"
                    Padding="14"
                    Margin="0,6">
              <VerticalStackLayout Spacing="8">
                <Grid ColumnDefinitions="*,Auto">
                  <VerticalStackLayout>
                    <Label Text="{Binding Title}"
                           FontAttributes="Bold"
                           FontSize="15"/>
                    <Label Text="{Binding Subtitle}"
                           FontSize="12"
                           TextColor="{AppThemeBinding Light=#6A6A6A, Dark=#A5A5A5}"
                           LineBreakMode="WordWrap"/>
                  </VerticalStackLayout>
                  <Label Grid.Column="1"
                         Text="{Binding LineTotal, StringFormat='${0:0.00}'}"
                         FontAttributes="Bold"
                         VerticalOptions="Start"/>
                </Grid>

                <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="12">
                  <Label Text="Cantidad" VerticalOptions="Center"/>
                  <Stepper Grid.Column="1"
                           Minimum="1"
                           Maximum="50"
                           Increment="1"
                           Value="{Binding Quantity}"/>
                  <Button Grid.Column="2"
                          Text="Editar"
                          Padding="12,6"
                          BackgroundColor="{AppThemeBinding Light=#E5D0DB, Dark=#36222F}"
                          TextColor="{AppThemeBinding Light=#521739, Dark=#F3D4E4}"
                          CommandParameter="{Binding}"
                          Clicked="EditButton_Clicked"/>
                  <Button Grid.Column="3"
                          Text="Eliminar"
                          Padding="12,6"
                          BackgroundColor="#E53935"
                          TextColor="White"
                          CommandParameter="{Binding}"
                          Clicked="RemoveButton_Clicked"/>
                </Grid>
              </VerticalStackLayout>
            </Border>
          </DataTemplate>
        </CollectionView.ItemTemplate>
      </CollectionView>

      <VerticalStackLayout Spacing="4" Padding="4,0">
        <Grid ColumnDefinitions="*,Auto">
          <Label Text="Total" FontAttributes="Bold"/>
          <Label Grid.Column="1"
                 Text="{Binding TotalFormatted}"
                 FontAttributes="Bold"/>
        </Grid>
      </VerticalStackLayout>

      <Grid ColumnDefinitions="*,*"
            ColumnSpacing="12">
        <Button Text="Seguir pidiendo"
                Command="{Binding ContinueCommand}"
                BackgroundColor="{AppThemeBinding Light=#F1E9F1, Dark=#2B1D29}"
                TextColor="{AppThemeBinding Light=#894164, Dark=#D5B2C2}"/>
        <Button Grid.Column="1"
                Text="Enviar orden"
                Command="{Binding CheckoutCommand}"
                BackgroundColor="#894164"
                TextColor="White"
                IsEnabled="{Binding HasItems}"/>
      </Grid>
    </VerticalStackLayout>
  </Border>
</toolkit:Popup>
