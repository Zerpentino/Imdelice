<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
  x:Class="Imdeliceapp.Pages.AdminMenuPage"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  Title="MenÃºs"
  x:Name="Page"
  BackgroundColor="{AppThemeBinding Light=White, Dark=Black}"
  Shell.NavBarIsVisible="True"
  Shell.BackgroundColor="{StaticResource BrandPrimary}"
  Shell.ForegroundColor="{StaticResource BrandOnPrimary}"
  Shell.TitleColor="{StaticResource BrandOnPrimary}">

  <!-- estilos -->
  <ContentPage.Resources>
    <!-- Tarjeta -->
    <Style x:Key="CardBorder"
        TargetType="Border">
      <Setter Property="Stroke"
          Value="{AppThemeBinding Light=#E6E6E6, Dark=#333}"/>
      <Setter Property="StrokeThickness"
          Value="1"/>
      <Setter Property="Background"
          Value="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}"/>
      <Setter Property="Padding"
          Value="12"/>
      <Setter Property="Margin"
          Value="0,8"/>
      <Setter Property="StrokeShape">
        <Setter.Value>
          <RoundRectangle CornerRadius="12"/>
        </Setter.Value>
      </Setter>
    </Style>

    <!-- BotÃ³n pequeÃ±o tipo â€œchipâ€ -->
    <Style x:Key="ChipButton"
        TargetType="Button">
      <Setter Property="Padding"
          Value="14,8"/>
      <Setter Property="CornerRadius"
          Value="10"/>
      <Setter Property="FontSize"
          Value="13"/>
    </Style>

    <!-- Icono -->
    <Style x:Key="IconBtn"
        TargetType="ImageButton">
      <Setter Property="BackgroundColor"
          Value="Transparent"/>
      <Setter Property="WidthRequest"
          Value="32"/>
      <Setter Property="HeightRequest"
          Value="32"/>
      <Setter Property="Padding"
          Value="4"/>
      <Setter Property="Aspect"
          Value="AspectFit"/>
      <Setter Property="HorizontalOptions"
          Value="Center"/>
      <Setter Property="VerticalOptions"
          Value="Center"/>
    </Style>
  </ContentPage.Resources>

  <Grid RowDefinitions="Auto,*"
        RowSpacing="0">

    <!-- Crear menÃº -->
    <Border Grid.Row="0"
            Style="{StaticResource CardBorder}"
            Margin="16,16,16,12"
            IsVisible="{Binding Source={x:Reference Page}, Path=FormCardVisible}">
      <Grid ColumnDefinitions="*,Auto,Auto"
            RowDefinitions="Auto,Auto"
            ColumnSpacing="12"
            RowSpacing="8">
        <Label x:Name="FormTitle"
               Text="Crear nuevo menÃº"
               Grid.ColumnSpan="3"
               FontAttributes="Bold"
               FontSize="16"
               TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
        <Entry x:Name="TxtMenuName"
               Grid.Row="1"
               Grid.Column="0"
               Placeholder="Nombre del nuevo menÃº"
               HorizontalOptions="FillAndExpand"/>
        <Button x:Name="BtnSubmit"
                Grid.Row="1"
                Grid.Column="1"
                Text="Crear"
                Style="{StaticResource ChipButton}"
                Clicked="SubmitMenu_Clicked"
                IsEnabled="False"/>
        <Button x:Name="BtnCancelEdit"
                Grid.Row="1"
                Grid.Column="2"
                Text="Cancelar"
                Style="{StaticResource ChipButton}"
                Clicked="CancelEdit_Clicked"
                IsVisible="False"/>
      </Grid>
    </Border>

    <!-- Lista principal -->
    <RefreshView Grid.Row="1"
        x:Name="Refresh"
        Refreshing="Refresh_Refreshing">
      <CollectionView x:Name="MenusCV"
                      Margin="16,0,16,0"
                      SelectionMode="Single"
                      SelectionChanged="MenusCV_SelectionChanged"
                      ItemSizingStrategy="MeasureAllItems">

        <CollectionView.ItemTemplate>
          <DataTemplate>
            <Border Style="{StaticResource CardBorder}">
              <Grid ColumnDefinitions="*,Auto,Auto"
                    ColumnSpacing="12">
                <!-- info -->
                <VerticalStackLayout Spacing="2">
                  <Label Text="{Binding name}"
                         FontAttributes="Bold"
                         LineBreakMode="TailTruncation"
                         MaxLines="1"
                         TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                  <Label Text="{Binding isActive, StringFormat='Activo: {0}'}"
                         FontSize="12"
                         Opacity="0.7"
                         TextColor="{AppThemeBinding Light=#555, Dark=#CCC}"/>
                </VerticalStackLayout>

                <!-- switch -->
                <Switch Grid.Column="1"
                        VerticalOptions="Center"
                        IsToggled="{Binding isActive}"
                        IsEnabled="{Binding Source={x:Reference Page}, Path=CanUpdate}"
                        Toggled="ToggleActivo_Toggled"/>

                <!-- acciones -->
                <HorizontalStackLayout Grid.Column="2"
                                       Spacing="8"
                                       VerticalOptions="Center">
                  <Button Text="Abrir"
                          Style="{StaticResource ChipButton}"
                          Clicked="Abrir_Clicked"/>
                  <ImageButton Source="delete.png"
                               Style="{StaticResource IconBtn}"
                               Clicked="Eliminar_Clicked"
                                IsEnabled="{Binding Source={x:Reference Page}, Path=CanDelete}"
                               IsVisible="{Binding Source={x:Reference Page}, Path=CanDelete}"/>
                </HorizontalStackLayout>
              </Grid>
            </Border>
          </DataTemplate>
        </CollectionView.ItemTemplate>

        <CollectionView.EmptyView>
          <VerticalStackLayout Padding="32"
              Spacing="8"
                               HorizontalOptions="Center"
                               VerticalOptions="Center">
            <Label x:Name="EmptyLbl"
                   Text="No hay menÃºs"
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
            <Button Text="Reintentar"
                Clicked="Retry_Clicked"/>
          </VerticalStackLayout>
        </CollectionView.EmptyView>
      </CollectionView>
    </RefreshView>

    <!-- FAB Papelera -->
    <Button Grid.RowSpan="2"
            x:Name="TrashFab"
            WidthRequest="56"
            HeightRequest="56"
            CornerRadius="28"
            BackgroundColor="#894164"
            TextColor="White"
            FontSize="18"
                        Text="ðŸ—‘"

            HorizontalOptions="End"
            VerticalOptions="End"
            Margin="16"
            IsVisible="{Binding Source={x:Reference Page}, Path=ShowTrashFab}"
            Clicked="TrashFab_Clicked"/>
  </Grid>
</ContentPage>
