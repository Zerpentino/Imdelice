<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Imdeliceapp.Pages.ProductPickerPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Elegir referencia">

  <ContentPage.ToolbarItems>
    <ToolbarItem Text="Cerrar"
                 Order="Primary"
                 Priority="0"
                 Clicked="Cancel_Clicked"/>
  </ContentPage.ToolbarItems>

  <Grid RowDefinitions="Auto,Auto,*"
        RowSpacing="8"
        Padding="12">
    <Picker x:Name="CategoryFilter"
            Title="Todas las categorías"
            Grid.Row="0"
            SelectedIndexChanged="CategoryFilter_SelectedIndexChanged"
            ItemDisplayBinding="{Binding Name}"/>
    <SearchBar x:Name="Search"
               Grid.Row="1"
               Placeholder="Buscar..."
               TextChanged="Search_TextChanged"/>
    <CollectionView Grid.Row="2"
                    x:Name="CV"
                    SelectionMode="Single"
                    SelectionChanged="CV_SelectionChanged">
      <CollectionView.ItemTemplate>
        <DataTemplate>
          <Grid Padding="12"
                Margin="0,4"
                ColumnDefinitions="*,Auto"
                BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}">
            <Grid.Triggers>
              <DataTrigger TargetType="Grid"
                           Binding="{Binding IsLinked}"
                           Value="True">
                <Setter Property="BackgroundColor" Value="#E6F4EA"/>
              </DataTrigger>
            </Grid.Triggers>

            <VerticalStackLayout Spacing="2">
              <Label Text="{Binding Name}"
                     FontAttributes="Bold">
                <Label.Triggers>
                  <DataTrigger TargetType="Label"
                               Binding="{Binding IsLinked}"
                               Value="True">
                    <Setter Property="TextColor" Value="#1B5E20"/>
                  </DataTrigger>
                </Label.Triggers>
              </Label>
              <HorizontalStackLayout Spacing="6">
                <Label Text="{Binding Type}"
                       FontSize="12"
                       Opacity="0.6"/>
                <Label Text="Ya en sección"
                       FontSize="12"
                       TextColor="#1B5E20"
                       IsVisible="{Binding IsLinked}"/>
              </HorizontalStackLayout>
            </VerticalStackLayout>
            <Label Grid.Column="1"
                   Text="{Binding PriceLabel}"
                   VerticalTextAlignment="Center"
                   FontAttributes="Bold"/>
          </Grid>
        </DataTemplate>
      </CollectionView.ItemTemplate>
    </CollectionView>
    <ActivityIndicator x:Name="LoadingIndicator"
                       Grid.RowSpan="3"
                       IsVisible="False"
                       IsRunning="False"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
  </Grid>
</ContentPage>
