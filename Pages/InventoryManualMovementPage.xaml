<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Imdeliceapp.Pages.InventoryManualMovementPage"
             Title="Movimiento manual"
              Shell.NavBarIsVisible="True"
             BackgroundColor="{AppThemeBinding Light=White, Dark=Black}">
  <ScrollView>
    <VerticalStackLayout Padding="24" Spacing="18">
      <Label Text="Registrar movimiento manual"
             FontSize="22"
             FontAttributes="Bold"
             TextColor="{AppThemeBinding Light=Black, Dark=White}"/>

      <Button Text="Seleccionar producto"
              Clicked="PickProductButton_Clicked"/>

      <Border StrokeThickness="1"
              BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1F1F1F}"
              Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#333333}"
              StrokeShape="{RoundRectangle CornerRadius=18}"
              Padding="16">
        <VerticalStackLayout Spacing="6">
          <Label x:Name="ProductNameLabel"
                 Text="Sin producto"
                 FontAttributes="Bold"
                 FontSize="18"
                 TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
          <Label x:Name="ProductDetailsLabel"
                 FontSize="13"
                 TextColor="{AppThemeBinding Light=#6F6F6F, Dark=#BFBFBF}"/>
        </VerticalStackLayout>
      </Border>

      <Picker x:Name="TypePicker"
              Title="Tipo de movimiento"
              ItemDisplayBinding="{Binding Label}"/>

      <Grid ColumnDefinitions="*,Auto"
            ColumnSpacing="12">
        <Entry x:Name="QuantityEntry"
               Placeholder="Cantidad"
               Keyboard="Numeric"/>
        <Picker x:Name="LocationPicker"
                Title="UbicaciÃ³n"
                Grid.Column="1"
                ItemDisplayBinding="{Binding name}"/>
      </Grid>

      <Editor x:Name="ReasonEditor"
              Placeholder="Motivo (opcional)"
              AutoSize="TextChanges"/>

      <Label x:Name="StatusLabel"
             FontSize="12"
             TextColor="#B71C1C"
             IsVisible="False"/>

      <Button Text="Registrar movimiento"
              Style="{StaticResource PrimaryButtonStyle}"
              Clicked="RegisterButton_Clicked"/>
    </VerticalStackLayout>
  </ScrollView>
</ContentPage>
