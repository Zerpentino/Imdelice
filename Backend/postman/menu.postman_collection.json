        {
          "name": "Create Menu",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Menu Principal\",\n  \"isActive\": true,\n  \"publishedAt\": null,\n  \"version\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/menus",
              "host": ["{{baseUrl}}"],
              "path": ["api", "menus"]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let jsonData;",
                  "try { jsonData = pm.response.json(); } catch (e) {",
                  "  pm.test('Respuesta JSON', () => pm.expect.fail('Respuesta no es JSON'));",
                  "  return;",
                  "}",
                  "pm.test('Menú creado', function () {",
                  "  pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
                  "  pm.expect(jsonData?.data?.id).to.exist;",
                  "});",
                  "if (jsonData?.data?.id) { pm.environment.set('menuId', jsonData.data.id); }"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
