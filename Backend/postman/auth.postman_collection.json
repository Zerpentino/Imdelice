        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login-pin",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "login-pin"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "let jsonData;",
              "try {",
              "  jsonData = pm.response.json();",
              "} catch (e) {",
              "  pm.test('Respuesta JSON v치lida', function () {",
              "    pm.expect.fail('No se pudo parsear JSON');",
              "  });",
              "  return;",
              "}",
              "pm.test('Login PIN exitoso', function () {",
              "  pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
              "  pm.expect(jsonData).to.have.property('data');",
              "  pm.expect(jsonData.data).to.have.property('token');",
              "});",
              "if (jsonData?.data?.token) {",
